extends layout

block content
	div#login
		h1 admin login
		form(method="post", action="/login")
			table
				tr
					td
						label(for="username") username: 
					td
						input(type="text", name="username", id="username")
				tr
					td
						label(for="password") password: 
					td
						input(type="password", name="password", id="password")
				tr
					td(colspan="2")
						input(type="submit", value="login")